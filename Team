#include <iostream>

using namespace std;
int main()
{
    int num, solved = 0;
    int n;
    cin >> n;
    while (n > 0)
    {
        int problem = 0;
        for (int j = 0; j < 3; j++)
        {
            cin >> num;
            if (num == 1)
            {
                problem++;
            }
        }
        if (problem >= 2)
        {
            solved++;
        }
        n--;
    }
    cout << solved;
    return 0;
}
